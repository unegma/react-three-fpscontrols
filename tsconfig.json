{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "outDir": "./dist",
    "target": "ES5",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "__tests__",
    "testing-utils",
    "**/*.test.js"
  ]
}
